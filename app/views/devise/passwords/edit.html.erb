<section class="container vh-100 d-flex flex-column justify-content-center">
  <div class="col-sm-8 col-md-6 col-lg-4 d-flex flex-column mx-auto">
    <h1 class="text-center h2 mb-4">Change your password</h1>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="form-group">
        <%= f.label :password, "New password" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
    
      <%= f.submit "Change my password", class: "btn btn-block btn-primary" %>
    <% end %>
    <div class="d-flex mt-3 double-sign-in-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>