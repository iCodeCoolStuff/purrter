<p id="notice"><%= notice %></p>

<h1>Purrs</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purrs.each do |purr| %>
      <tr>
        <td><%= purr.content %></td>
        <td><%= purr.user %></td>
        <td><%= link_to 'Show', purr %></td>
        <td><%= link_to 'Edit', edit_purr_path(purr) %></td>
        <td><%= link_to 'Destroy', purr, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

