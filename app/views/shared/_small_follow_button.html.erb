<% if !current_user.following?(linked_user) %>
  <%= form_for(current_user.active_relationships.build) do |f| %>
    <div><%= hidden_field_tag :followed_id, linked_user.id %></div>
    <%= f.submit "Follow", class: "btn btn-sm btn-primary" %>
  <% end %>
<% else %>
  <%= form_for(current_user.active_relationships.find_by(followed_id: linked_user.id), html: { method: :delete }) do |f| %>
    <%= f.submit "Unfollow", class: "btn btn-sm btn-outline-primary" %>
  <% end %>
<% end %>