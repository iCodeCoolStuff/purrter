<% if current_user.id == @user.id %>
  <a href='<%= edit_user_registration_path @user %>' class="btn btn-outline-primary ml-auto d-block">Edit Profile</a>
<% else %>
  <% if !current_user.following?(@user) %>
    <%= form_for(current_user.active_relationships.build) do |f| %>
      <div><%= hidden_field_tag :followed_id, @user.id %></div>
      <%= f.submit "Follow", class: "btn btn-primary ml-auto d-block" %>
    <% end %>
  <% else %>
    <%= form_for(current_user.active_relationships.find_by(followed_id: @user.id), html: { method: :delete }) do |f| %>
      <%= f.submit "Unfollow", class: "btn btn-outline-primary ml-auto d-block" %>
    <% end %>
  <% end %>
<% end %>