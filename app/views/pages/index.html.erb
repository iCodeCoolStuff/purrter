<div class="landing-hero d-flex justify-content-center align-items-center">
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="col-12 col-md-9 col-lg-6 text-white landing-text-container">
        <h1>Welcome to Purrter</h1>
        <p class="h4 font-weight-light">Find out what's cattening, right now, with friends and other
          cool cats that you care about.</p>
        <div class="d-flex d-md-none mt-4">
          <%= link_to "Sign up", new_user_registration_path, class: "btn btn-block btn-light" %>
          <%= link_to "Log in", new_user_session_path, class: "btn btn-block btn-outline-light mt-0 ml-2" %>
        </div>
      </div>
      <div class="col-md-9 col-lg-6 d-none d-md-flex justify-content-center">
        <div class="landing-form-container mt-md-5 mt-lg-0">
          <div class="card landing-login-form">
            <h3 class="card-title">Log in</h3>
            <%= form_for :user, url: user_session_path, method: "post" do |f| %>
              <div class="form-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
              </div>

              <div class="form-group d-flex">
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
                <%= f.submit "Log in", class: "form-group btn btn-outline-primary ml-1 mb-0" %>
              </div>

              <div class="form-group form-check d-flex">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label" %>
                <%= render "devise/shared/forgot" %>
              </div>
            <% end %>
          </div>
          <div class="card mt-3">
            <h3 class="card-title">New to Purrter?</h3>
            <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-block btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>