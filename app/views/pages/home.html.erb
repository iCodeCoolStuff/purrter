
<div class="banner" style="background-image: url(<%= asset_path 'background-example.jpeg' %>)">
</div>
<section class="container-fluid stats-banner">
  <div class="container">
    <div class="row">
      <div class="col-3"></div>
      <div class="col-6">
        <ul class="stats-bar">
          <li><a href="#"><span class="text-muted">Purrs</span><span>1,234</span></a>
          <li><a href="#"><span class="text-muted">Following</span><span>1,234</span></a>
          <li><a href="#"><span class="text-muted">Followers</span><span>1,234</span></a>
          <li><a href="#"><span class="text-muted">Likes</span><span>1,234</span></a>
        </ul>
      </div>
      <div class="col-3 d-flex flex-column justify-content-center">
        <button class="btn btn-primary ml-auto d-block">Follow</button>
      </div>
    </div>
  </div>
</section>
<section class="container-fluid main">
  <div class="container">
    <div class="row">
      <section class="col-3">
        <div class="row">
          <div class="col-10">
            <%= user_avatar @user, class: "profile-img" %>
            <div>
              <h5 class="profile-title"><%= @user.name %></h5>
              <small class="text-muted"><%= "@#{@user.username}" %></small>
              <p><i class="fas fa-calendar-alt"></i> Joined <%= @user.created_at.strftime("%B %Y") %>
            </div>
          </div>
        </div>
      </section>
      <section class="col-6">
        <% @purrs.each do |purr| %>
          <div class="purr">
            <div class="row">
              <div class="col-2">
                <%= user_avatar @user, style: "width: 100%" %>
              </div>
              <div class="col-10">
                <p class="purr-title"><a href="#"><strong><%= @user.name %></strong> <small class="text-muted"><%= "@#{@user.username}" %></small></a></p>
                <p class="purr-content"><%= purr.content %></p>
                <div class="action-bar">
                  <div>
                    <i class="fas fa-reply"></i> 1,234
                  </div>
                  <div>
                    <i class="fas fa-retweet"></i> 5,678
                  </div>
                  <div>
                    <i class="fas fa-heart"></i> 10,234</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </section>
      <section class="col-3">
        <div class="who-to-follow container">
          <h5>Who to Follow</h5>
          <div class="follow-profile">
            <div class="row">
              <div class="col-3"><%= user_avatar @user, class: "follow-profile-img" %></div>
              <div class="col-9">
                <p class="follow-profile-title">
                  <a href="#">
                    <strong><%= @user.name %></strong>
                    <small class="text-muted">
                      <%= "@#{@user.username}" %>
                    </small>
                  </a>
                </p>
                <button class="btn btn-primary btn-sm">Follow</button>
              </div>
            </div>
          </div>
          <div class="follow-profile">
            <div class="row">
              <div class="col-3"><%= user_avatar @user, class: "follow-profile-img" %></div>
              <div class="col-9">
                <p class="follow-profile-title">
                  <a href="#">
                    <strong><%= @user.name %></strong>
                    <small class="text-muted">
                      <%= "@#{@user.username}" %>
                    </small>
                  </a>
                </p>
                <button class="btn btn-primary btn-sm">Follow</button>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</section>